<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chinamobile.demo.mapper.OrderInfoMapper">

    <insert id="createOrder" keyProperty="id" useGeneratedKeys="true">
        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
            select LAST_INSERT_ID()
        </selectKey>
        insert into order_info(user_id, service_name, service_level, slice_type, order_time,
        area_list, user_list, app_list, order_status, fee)
        values(#{userId}, #{serviceName},
        #{serviceLevel},
        #{sliceType},
        #{orderTime},
        #{areaList}, #{userList}, #{appList}, #{orderStatus}, #{fee})
    </insert>
    <select id="getOrderList" resultType="com.chinamobile.demo.entities.OrderInfo">
        select * from order_info
        <where>
            <if test= "id != null">
                id=#{id}
            </if>
            <if test= "userId != null">
                and user_id=#{userId}
            </if>
            <if test= "orderStatus != null and orderStatus != ''">
                and order_status=#{orderStatus}
            </if>
            <if test= "sliceType != null and sliceType != ''">
                and slice_type=#{sliceType}
            </if>
            <if test= "serviceLevel != null and serviceLevel != ''">
                and service_level=#{serviceLevel}
            </if>
        </where>
        <if test="startIndex != null and pageSize != null">
            limit #{startIndex},#{pageSize};
        </if>

    </select>

    <select id="getOrderCount" resultType="java.lang.Integer">
        select count(*) from order_info
        <where>
            <if test= "userId != null">
                user_id=#{userId,jdbcType=INTEGER}
            </if>
        </where>
    </select>
</mapper>


